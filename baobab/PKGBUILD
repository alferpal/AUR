# Contributor: Jonathan Tellier <jonathan.tellier@gmail.com>
pkgname=baobab
pkgver=3.2.0
pkgrel=1
pkgdesc="A C/gtk+ application to analyse disk usage in any Gnome environment."
arch=('i686' 'x86_64')
url="http://www.marzocca.net/linux/baobab.html"
license=('GPL')
depends=('gconf' 'libgtop' 'hicolor-icon-theme' 'libcanberra' 'libsm' 'gsettings-desktop-schemas' 'desktop-file-utils')
makedepends=('gnome-doc-utils' 'intltool')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-utils/${pkgver%.*}/gnome-utils-$pkgver.tar.bz2)

md5sums=('a38074883765e57413264d2cb47b731f')
     
build() {
        cd $srcdir/gnome-utils-$pkgver
        ./configure --prefix=/usr --mandir=/usr/share/man \
        --sysconfdir=/etc 
        cd baobab
        make
}
     
package() {
        cd $srcdir/gnome-utils-$pkgver/baobab
        make DESTDIR=$pkgdir install
    }
